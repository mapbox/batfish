{
  "name": "@mapbox/batfish",
  "version": "0.4.0",
  "description": "The React-powered static-site generator you didn't know you wanted",
  "main": "index.js",
  "bin": {
    "batfish": "bin/batfish.js"
  },
  "files": [
    "bin",
    "conf",
    "docs",
    "lib",
    "src",
    "modules"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "lint-js": "eslint .",
    "format": "prettier --single-quote --write '{,lib/**/,src/**/,bin/**/,test/**/}*.js'",
    "test-jest": "jest",
    "lint-md-partial": "remark --frail --quiet --no-stdout --use 'validate-links=repository:\"mapbox/batfish\"' --use remark-lint-no-dead-urls --use remark-toc=tight:true --output --",
    "lint-md": "npm run lint-md-partial -- docs/*.md *.md",
    "lint": "npm run lint-js && npm run lint-md",
    "pretest": "npm run lint",
    "test": "jest",
    "build-modules": "rm -rf modules && babel src/public --out-dir modules",
    "prepublishOnly": "npm run build-modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mapbox/batfish.git"
  },
  "author": "Mapbox",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mapbox/batfish/issues"
  },
  "homepage": "https://github.com/mapbox/batfish#readme",
  "lint-staged": {
    "**/*.js": [
      "eslint",
      "prettier --single-quote --write",
      "git add"
    ],
    "{docs/*.md,README.md,CHANGELOG.md}": [
      "npm run lint-md-partial",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "jest": {
    "coverageReporters": [
      "text",
      "html"
    ],
    "roots": [
      "./test"
    ],
    "testEnvironment": "node",
    "clearMocks": true
  },
  "dependencies": {
    "@mapbox/babel-plugin-transform-jsxtreme-markdown": "^0.3.0",
    "@mapbox/jsxtreme-markdown-loader": "^0.4.0",
    "@mapbox/link-hijacker": "^0.3.1",
    "@mapbox/link-to-location": "^0.1.0",
    "@mapbox/postcss-html-filter": "^0.2.0",
    "@mapbox/scroll-restorer": "^0.1.0",
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^7.1.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-react-jsx-self": "^6.22.0",
    "babel-plugin-transform-react-jsx-source": "^6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.24.1",
    "browser-sync": "^2.18.12",
    "chalk": "^2.0.0",
    "connect-history-api-fallback": "^1.3.0",
    "cpy": "^5.0.0",
    "css-loader": "^0.28.4",
    "csso": "^3.1.1",
    "date-time": "^2.0.0",
    "debounce": "^1.0.2",
    "dedent": "^0.7.0",
    "del": "^3.0.0",
    "es6-promise": "^4.1.0",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "get-port": "^3.1.0",
    "globby": "^6.1.0",
    "got": "^7.0.0",
    "gray-matter": "^3.0.2",
    "html-webpack-plugin": "^2.28.0",
    "json-loader": "^0.5.4",
    "lodash": "^4.17.4",
    "meow": "^3.7.0",
    "mkdirp": "^0.5.1",
    "pify": "^3.0.0",
    "postcss": "^6.0.1",
    "postcss-loader": "^2.0.5",
    "postcss-url": "^7.0.0",
    "postcss-values-parser": "^1.2.2",
    "prop-types": "^15.5.10",
    "remark-lint-no-dead-urls": "^0.2.0",
    "remark-toc": "^4.0.1",
    "sitemap-static": "^0.4.2",
    "slugg": "^1.2.1",
    "style-loader": "^0.18.2",
    "tempy": "^0.1.0",
    "uglify-js": "^2.8.29",
    "webpack": "^2.2.0",
    "webpack-chunk-hash": "^0.4.0",
    "webpack-merge": "^4.1.0",
    "webpack-parallel-uglify-plugin": "^0.4.2",
    "worker-farm": "^1.4.1",
    "xtend": "^4.0.1"
  },
  "peerDependencies": {
    "react": "^15.5.0",
    "react-dom": "^15.5.0",
    "react-helmet": "^5.1.3"
  },
  "devDependencies": {
    "@mapbox/vnu-validate-html": "^0.1.0",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^4.0.0",
    "eslint-plugin-filenames": "^1.2.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-react": "^7.0.1",
    "husky": "^0.14.1",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.0",
    "path-type": "^3.0.0",
    "prettier": "^1.5.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-helmet": "^5.1.3",
    "remark-cli": "^4.0.0",
    "remark-validate-links": "^6.1.0"
  },
  "optionalDependencies": {}
}

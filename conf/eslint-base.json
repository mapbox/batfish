{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "filenames",
    "prettier"
  ],
  "rules": {
    "no-bitwise": ["error"],
    "no-console": ["off"],
    "no-redeclare": ["error"],
    "no-undef": ["error"],
    "no-underscore-dangle": ["off"],
    "no-unused-vars": ["error"],
    "no-use-before-define": ["off"],
    "strict": ["off"],
    "valid-typeof": ["error"],

    "filenames/match-regex": ["error", "^[a-z-\\.]+?$"],

    "prettier/prettier": ["error", {
      "singleQuote": true
    }]
  }
}

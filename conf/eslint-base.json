{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "filenames"
  ],
  "rules": {
    "strict": ["error", "global"],
    "no-console": ["off"],

    "filenames/match-regex": ["error", "^[0-9a-z-\\.]+?$"]
  }
}

{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "filenames",
    "flowtype"
  ],
  "rules": {
    "strict": ["error", "global"],

    "filenames/match-regex": ["error", "^[0-9a-z-\\.]+?$"],

    "flowtype/define-flow-type": ["error"]
  }
}
